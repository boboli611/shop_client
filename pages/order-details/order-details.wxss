.page-container{
  padding-bottom: 100rpx;
}
.order-state{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background-color: #BF4251;
}

.order-state-color{
   background-color:#C0A588; 
}

.address-container{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}
.user-info{
  width: 100%;
  font-size: 30rpx;
  color: #353535;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.address-detail{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 16rpx;
}
.address-icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.address-detail-text{
  font-size: 26rpx;
  color: #666;
}

/* sku */
.sku-list{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.sku-container{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
}
.sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.sku-info{
  position: relative;
  flex: 1;
}
.sku-info-row{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.sku-name{
  width: 100%;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.gray{
  color: #999;
}
.black{
  color: #333;
}
.sku-detial{
  font-size: 26rpx;
  margin-right: 20rpx;
}
.sku-price-and-number{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.sku-price{
  color: #A38064;
  font-size: 30rpx;
}
.sku-number{
  font-size: 30rpx;
  color: #333;
}
.sku-after-sell{
  width: 120rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 24rpx;
  color: #353535;
  border: 1rpx solid #ccc;
  border-radius: 27rpx;
}
.sku-after-sell-red{
  color: #BB2638;
  border-color: #BB2638;
}

.other-row{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}
.other-input{
  height: 90rpx;
  line-height: 90rpx;
  flex: 1;
  text-align: right;
}
/* 客服 */
.contact-service{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
}
.contact-service-hover{
  background: #f0f0f0;
}
.icon-service{
  width: 44rpx;
  height: 44rpx;
  margin-right: 6rpx;
}
/* 订单信息 */
.order-detail-list{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.order-detail{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  letter-spacing: 0;
  font-size: 26rpx;
}
.title{
  width: 160rpx;
  text-align: left;
  color: #999;
}
.value{
  flex: 1;
  color: #333333;
}
/* 操作台 */
.footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  padding-right: 30rpx;
  box-shadow: 0 -2px 6px 0 rgba(0,0,0,0.11);
}
.btn{
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #979797;
  border: 1px solid #979797;
  border-radius: 4rpx;
  margin-left: 30rpx;
  margin-right: 0;
  background: transparent;
  font-size: 26rpx;
}
.btn-red{
  color: #BB2638;
  border-color: #BB2638;
}
