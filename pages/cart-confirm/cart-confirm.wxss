.page-container{
  min-height: 100vh;
  padding-bottom: 100rpx;
}
.address-container{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 4rpx dashed rgba(187,38,56, 0.4);
}
.user-info{
  width: 100%;
  font-size: 30rpx;
  color: #353535;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.address-detail{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 16rpx;
}
.address-icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.address-detail-text{
  font-size: 26rpx;
  color: #666;
  flex: 1;
}
.icon-arrow{
  width: 32rpx;
  height: 50rpx;
}
/* sku */
.sku-list{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.sku-container{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
}
.sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.sku-info{
  position: relative;
  flex: 1;
}
.sku-info-row{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.sku-name{
  width: 100%;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.gray{
  color: #999;
}
.black{
  color: #333;
}
.sku-detial{
  font-size: 26rpx;
  margin-right: 20rpx;
}
.sku-price-and-number{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.sku-price{
  color: #A38064;
  font-size: 30rpx;
}
.sku-number{
  font-size: 30rpx;
  color: #333;
}
.other-row{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}
.other-row:last-child{
  border-bottom: 0;
}
.other-input{
  height: 90rpx;
  line-height: 90rpx;
  flex: 1;
  text-align: right;
  color: #ccc;
}

.footer{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  text-align: right;
  font-size: 40rpx;
  color: #333;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 -2rpx 6rpx 0 rgba(0,0,0,0.11);
}
.pay-btn{
  width: 32vw;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background: #BF4251;
  text-align: center;
  margin-left: 30rpx;
}
