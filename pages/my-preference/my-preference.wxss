.page-container{
  padding-top: 80rpx;
}
.header{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 20;
  border-top: 1rpx solid #e5e5e5;
  background: #fff;
  width: 100vw;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 60rpx;
}
.order-type{
  font-size: 26rpx;
  color: #666;
}
.order-type-current{
  color: #BF4251;
}
.header-order-line{
  height: 2rpx;
  background: #BF4251;
  border-radius: 2rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  transition: all .2s linear;
}

.preference-list{
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
  margin-top: 30rpx;
}

.preference-container{
  width: 100%;
  height: 180rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  overflow: hidden;
  box-sizing: border-box;
  border-left: 8rpx solid #BF4251;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.preference-container-disabled{
  border-left-color: #ccc;
}
.preference-detail{
   flex: 2;
   height: 100%;
   box-sizing: border-box;
   border-right: 2rpx dashed #ccc;
   padding-left: 35rpx;
}
.preference-title{
  font-size: 34rpx;
  color: #333333;
  line-height: 34rpx;
  margin-top: 14rpx;
  margin-bottom: 30rpx;
  line-height: 1;
}
.preference-title-disabled{
  color: #999;
}
.preference-desc{
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 20rpx;
  line-height: 1;
}
.preference-desc-disabled{
  color: #ccc;
}
.preference-validity{
  font-size: 26rpx;
  color: #999999;
  line-height: 1;
}
.preference-validity-disabled{
  color: #ccc;
}

.preference-price{
   flex: 1;
   height: 100%;
   box-sizing: border-box;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   position: relative;
}
.preference-price-text{
  font-size: 56rpx;
  color: #BF4251;
  margin-bottom: 10rpx;
  line-height: 1;
}
.preference-price-disabled{
  color: #999;
}
.preference-price-unit{
  font-size: 26rpx;
}
.preference-use-btn{
  display: block;
  padding: 0 30rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background: #fff;
  border-radius: 23rpx;
  border: 1px solid #BF4251;
  color: #BF4251;
  font-size: 26rpx;
}
.preference-use-btn-hover{
  color: #fff;
  border-style: #fff;
  background: #BF4251;
}

.preference-icon{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
