.page-container{
  padding: 0rpx 0 100rpx 0;
}

.header{
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  align-items: center;
  /* position: fixed;
  top: 0;
  left: 0;
  z-index: 10; */
}
.edit-button{
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  box-sizing: border-box;
  background: transparent;
  border: 1px solid #BB2638;
  border-radius: 28rpx;
  color: #BB2638;
}

.address-list{
  width: 100%;
  overflow: hidden;
}
.address-container{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.address-content{
  width: 100%;
  /* height: 180rpx; */
  box-sizing: border-box;
  padding: 24rpx 30rpx;
}
.address-header{
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  color: #353535;
}
.address-detail{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #666;
}
.address-detail-text{
  display: block;
  width: 100%;
  min-height: 76rpx;
  line-height: 38rpx;
  position: relative;
}
.address-default-symbol{
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 2;
  width: 60rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  color: #fff;
  background: #C0A588;
  font-size: 20rpx;
  border-radius: 4rpx;
}
.address-icon{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
  align-self: flex-start;
}
.address-editor{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #e5e5e5;
}
.default{
  height: 32rpx;
  color: #333;
  font-size: 26rpx;
  line-height: 32rpx;
  display: flex;
  background: #fff;
  margin-left: 0;
  padding-left: 0;
}
.icon-selector{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.button-group{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.icon-button{
  /* width: 16rpx;
  height: 21rpx; */
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.edit{
  margin-right: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.add-address{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #BF4251;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}
.delete{
  display: flex;
  flex-direction: row;
  align-items: center;
}