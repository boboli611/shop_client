/* pages/cart/cart.wxss */
.page-container{
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  padding-top: 90rpx;
  padding-bottom: 100rpx;
}
.empty-container{
  width: 100vw;
  height: calc(100vh - 190rpx);
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.icon-empty{
  margin-top: -80rpx;
  width: 120rpx;
  height: 120rpx;
}
.empty-tip1{
  font-size: 30rpx;
  color: #999;
  margin: 20rpx 0;
}
.empty-tip2{
  font-size: 24rpx;
  color: #ccc;
}
.header{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  border-top: 1rpx solid #e5e5e5;
  font-size: 30rpx;
  background: #fff;
}
.btn-group{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btn{
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 32rpx;
  border: 1px solid #999;
  color: #333;
  background: #fff;
  text-align: center;
  box-sizing: content-box;
  padding: 0 30rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
}
.btn-hover{
  color: #fff;
  background: #999;
}
.btn-red{
  border-color: #BB2638;
  color: #BB2638;
}
.btn-red-hover{
  background: #BB2638;
  color: #fff;
  border-color: #fff;
}
/* footer */
.footer{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #e5e5e5;
}
.select-all{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 30rpx;
  background: #fff;
}
.sum-price{
  height: 100%;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #333;
  padding: 0 10rpx;
  margin-right: 20rpx;
}
.sum-price-tip{
  font-size: 30rpx;
}
.sum-pay{
  width: 280rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  background: #BF4251;
  color: #fff;
  font-size: 34rpx;
}
/* sku */
.sku-list{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.sku-container{
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.sku-selector{
  width: 32rpx;
  height: 100%;
  margin: 0 20rpx 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.select-icon{
  width: 32rpx;
  height: 32rpx;
}
.sku-content{
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx 20rpx 0;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5e5e5;
  overflow: hidden;
}
.sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.sku-info-container{
  position: relative;
  flex: 1;
}
.sku-info-row{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.sku-info-row-space{
  justify-content: space-between;
}
.sku-name{
  width: 45vw;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.icon-edit-container{
  width: 64rpx;
  height: 60rpx;
  position: relative;
}
.icon-edit{
  position: absolute;
  right: 0;
  top: 0;
  width:32rpx;
  height:32rpx;
}
.gray{
  color: #999;
}
.black{
  color: #333;
}
.sku-detial{
  font-size: 26rpx;
  margin-right: 20rpx;
}
.sku-price-and-number{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.sku-price{
  color: #A38064;
  font-size: 30rpx;
}
.sku-number{
  font-size: 30rpx;
  color: #333;
}
/* 编辑状态 */
.edit-number-container{
  width: 206rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}
.edit-number-button{
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 34rpx;
  color: #666;
  background: #f0f0f0;
  border-radius: 4rpx;
}
.edit-number-button-disabled{
  color: #ccc;
}
.edit-number{
  font-size: 30rpx;
  color: #333;
}
.edit-properties{
  width: 206rpx;
  height: 56rpx;
  background: #f0f0f0;
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #333;
  /* text-align: center; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 10rpx 0 20rpx;
  border-radius: 4rpx;
  margin-left: 0;
}
.icon-arrow-down{
  width: 20rpx;
  height: 20rpx;
  transform: rotateZ(90deg);
}

.sku-edit-complete{
  width: 120rpx;
  height: 100%;
  background: #BF4251;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  animation: edit-button-show .2s ease-out;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
}
.sku-edit-complete-hover{
  background: #A83644;
}
@keyframes edit-button-show {
  from{ transform: translateX(100%) }
  to{ transform: translateX(0%) }
}

/************************************** 商品尺寸，颜色编辑（从page/sku-item复制） ***************************************/
.sku-size{
  position: relative;
}
.sku-size-header{
  width: 100%;
  height: 240rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.sku-size-header-content{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
}
.sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.sku-size-info{
  flex: 1;
  height: 200rpx;
  position: relative;
  font-size: 30rpx;
  color: #333;
}
.sku-size-price{
  position: absolute;
  left: 0;
  bottom: 0;
  color: #A38064;
  font-size: 40rpx;
}
.sku-size-properties{
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 30rpx 0rpx 30rpx;
}
.sku-size-properties-title{
  color: #333;
  font-size: 28rpx;
  text-align: left;
  margin-top: 30rpx;
}
.sku-size-properties-value{
  margin-top: 16rpx;
  margin-right: 30rpx;
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  text-align: center;
  background: #f0f0f0;
  color: #666;
  border-radius: 2rpx;
  display: inline-block;
}
.sku-size-properties-value-selected{
  background: #C0A588;
  color: #fff;
}
.sku-size-properties-value-disabled{
  background: #f0f0f0;
  color: #999;
}
.sku-size-number{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  margin: 30rpx 0 60rpx 0;
}
.edit-number-container{
  width: 206rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.edit-number-button{
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 34rpx;
  color: #666;
  background: #f0f0f0;
  border-radius: 4rpx;
}
.edit-number{
  font-size: 30rpx;
  color: #333;
}
.sku-size-btn-group{
  margin-top: 60rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
}
.sku-size-btn{
  flex: 1;
  height: 100%;
  background: #f0f0f0;
  color: #666;
  font-size: 30rpx;
  line-height: inherit;
}
.sku-size-btn-hover{
  background: #e5e5e5;
}

.sku-size-btn-confirm{
  background: #BF4251;
  color: #fff;
}
.sku-size-btn-confirm-hover{
  background: #a83644;
}
