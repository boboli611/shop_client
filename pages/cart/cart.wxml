<view class="page-container">
  <view class="header">
    <text>Lipez</text>
    <view class="btn-group">
      <button wx:if="{{ state === 'normal' }}" bindtap="switchPageState" class="btn btn-red">管理</button>
      <button wx:if="{{ state === 'edit' }}" class="btn">删除</button>
      <button wx:if="{{ state === 'edit' }}" bindtap="switchPageState" class="btn btn-red">完成</button>
    </view>
  </view>

  <view class="sku-list">

    <view class="sku-container" wx:for="{{[1, 2, 3, 4]}}" wx:key="index" wx:for-index="index" wx:for-item="sku">
      <view class="sku-selector">
        <image src="/assets/icon-xuan-g.png" class="select-icon"></image>
      </view>
      <view class="sku-content">
        <image class="sku-img" src="https://bpic.588ku.com/back_pic/00/15/30/5756ebe404845bb.jpg!ww800"></image>
        <view class="sku-info-container">
          <view class="sku-info-row sku-info-row-space">
            <view class="sku-name">
              <text wx:if="{{ !editMap[index] }}">INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤</text>
              <view wx:else class="edit-number-container">
                <text class="edit-number-button">-</text>
                <text class="edit-number">12</text>
                <text class="edit-number-button">+</text>
              </view>
            </view>
            <image bindtap="edit" data-sku-index="{{index}}" src="/assets/icon-bianji.png" class="icon-edit"></image>
          </view>

          <view class="sku-info-row">
            <view wx:if="{{ !editMap[index] }}">
              <text class="sku-detial gray">颜色</text>
              <text class="sku-detial black">中蓝</text>
              <text class="sku-detial gray">|</text>
              <text class="sku-detial gray">尺码</text>
              <text class="sku-detial black">M</text>
            </view>
            <view class="edit-properties" wx:else>
              <text>中蓝；M</text>
              <image src="/assets/icon-arrow-r.png" class="icon-arrow-down"></image>
            </view>
          </view>

          <view class="sku-price-and-number">
            <text class="sku-price">¥2333333{{editList.indexOf(index)}}</text>
            <text class="sku-number">x1</text>
          </view>
        </view>
      </view>
      <button wx:if="{{ editMap[index] }}" data-sku-index="{{index}}" bindtap="completeEdit" class="sku-edit-complete">完成</button>
    </view>

  </view>





  <view class="footer">
    <view class="select-all">
      <text>全选</text>
    </view>
    <view class="sum-price" wx:if="{{ state === 'normal' }}">
      <text class="sum-price-tip">合计：</text>
      <text>¥123456</text>
    </view>
    <button class="sum-pay" bindtap="pay">结算(3)</button>
  </view>
</view>
