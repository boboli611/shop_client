<view class="page-container" >
  <view class="loading-next-page" wx:if="{{loadingNext != 0 }}">{{
    loadingNext === 1? '加载中...' :
    loadingNext === -1 && currentPage > 1? '我是有底线的' :
    loadingNext === -1 && currentPage === 1? '没有搜索到商品' :
    ''
  }}</view>

  <view class="sku-list-container" wx:if="{{ skuList.length > 0 }}">
  <text class="sku-list-title">新品推荐</text>
    <sku-list skuList="{{skuList}}"></sku-list>
  </view>

  <view class="to-top" bindtap="toTop" wx:if="{{topShow == 1}}">
    <image class="to-top-icon" src="/assets/icon-quanbu.png" mode="widthFix"></image>
  </view>
</view>
