.page-container{
  width: 100%;
  height: 100vh;
}
.feedback{
  width: 100%;
  height: 240rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  padding: 30rpx;
  border-top: 1rpx solid #e5e5e5;
  background: #fff;
}
.input-container{
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #333;
  font-size: 30rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
}
.input{
  flex: 1;
  height: 90rpx;
  text-align: right;
}

.tip{
  margin: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #ccc;
  font-size: 26rpx;
}
.save{
  width: calc(100vw - 60rpx);
  height: 90rpx;
  line-height: 90rpx;
  margin: 30rpx auto;
  border-radius: 4rpx;
  background: #BF4251;
  color: #fff;
}
