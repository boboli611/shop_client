.page-container{
  padding-top: 80rpx;
}
.header{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 20;
  border-top: 1rpx solid #e5e5e5;
  background: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.order-type{
  font-size: 26rpx;
  color: #666;
}
.order-type-current{
  color: #BF4251;
}
.header-order-line{
  height: 4rpx;
  background: #BF4251;
  border-radius: 2rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  transition: all .2s linear;
}
.gray{
  color: #999;
}
.black{
  color: #333;
}

.order-container{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.order-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order-number{
  font-size: 24rpx;
}
.order-state{
  font-size: 26rpx;
}
.order-sku{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5e5e5;
}
.order-sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.order-sku-details{
  flex: 1;
  height: 200rpx;
  position: relative;
  font-size: 26rpx;
}
.sku-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.price-and-number{
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.order-operation{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 26rpx;
}
.button-group{
  display: flex;
  flex-direction: row;
}
.button{
  box-sizing: content-box;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 4rpx;
  border-width: 1rpx;
  border-style: solid;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.button-red{
  border-color: #BB2638;
  color: #BB2638;
}
.button-black{
  border-color: #333;
  color: #333;
}

.no-orders{
  display: block;
  margin-top: 50vh;
  text-align: center;
  transform: translateY(-80rpx);
  font-size: 30rpx;
  color: #999;
}