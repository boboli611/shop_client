<view class="page-container">
  <swiper class="swiper" autoplay indicator-dots indicator-color="rgba(255, 255, 255, 0.7)" indicator-active-color="rgba(255,255,255, 1)">
    <block wx:for="{{[1, 2, 3, 4, 5]}}" >
      <swiper-item>
        <image src="https://bpic.588ku.com/back_pic/00/15/30/5756ebe404845bb.jpg!ww800" class="slide-image" mode="aspectFill" />
      </swiper-item>
    </block>
  </swiper>

  <view class="sku-info">
    <view class="title"><text>INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤</text></view>
    <view class="sku-detail">
      <text class="sku-price">¥ 399</text>
      <text class="sku-payednumber">已售1234567件</text>
    </view>
  </view>

  <view class="list-container">
    <view class="list" bindtap="switchDetails">
      <text>规格尺寸</text>
      <image class="icon-arrow" src="/assets/icon-arrow-r.png"></image>
    </view>
    <view class="list" bindtap="switchSkuInfo">
      <text>商品信息</text>
      <image class="icon-arrow" src="/assets/icon-arrow-r.png"></image>
    </view>
  </view>

  <view class="operation">
    <button class="service">
      <image class="icon" mode="aspectFill" src="/assets/icon-kefu.png"></image>
      <text class="service-text">客服</text>
    </button>

    <button class="service">
      <image class="icon" mode="aspectFill" src="/assets/icon-gwd.png"></image>
      <text class="service-text">购物袋</text>
    </button>

    <button class="add-cart" hover-class="add-cart-hover" bindtap="addCart">加入购物袋</button>
    <navigator class="buy" hover-class="buy-hover">购买</navigator>
  </view>

  <image class="animation" wx:if="{{addCartAnimation}}" src="https://bpic.588ku.com/back_pic/00/15/30/5756ebe404845bb.jpg!ww800"></image>

  <!-- 规格尺寸 -->
  <cover-card wx:if="{{detailsVisible}}" bind:close="switchDetails">
    <view class="sku-size">
      <view class="sku-size-header">
        <view class="sku-size-header-content">
          <image class="sku-img" src="https://bpic.588ku.com/back_pic/00/15/30/5756ebe404845bb.jpg!ww800"></image>
          <view class="sku-size-info">
            <text>INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤</text>
            <text class="sku-size-price">¥399</text>
          </view>
        </view>
      </view>
      <view class="sku-size-properties">
        <view wx:for="{{[1, 2]}}">
          <view class="sku-size-properties-title">颜色</view>
          <view>
            <text class="sku-size-properties-value">浅蓝</text>
            <text class="sku-size-properties-value">深蓝</text>
            <text class="sku-size-properties-value">1123</text>
            <text class="sku-size-properties-value">4456</text>
            <text class="sku-size-properties-value">4456</text>
          </view>
        </view>
      </view>
      <view class="sku-size-number">
        <text>数量</text>
        <view class="edit-number-container">
          <text class="edit-number-button">-</text>
          <text class="edit-number">1</text>
          <text class="edit-number-button">+</text>
        </view>
      </view>

      <view class="sku-size-btn-group">
        <button class="sku-size-btn" catchtap="switchDetails" hover-class="sku-size-btn-hover">取消</button>
        <button class="sku-size-btn sku-size-btn-confirm" hover-class="sku-size-btn-confirm-hover">确认</button>
      </view>
    </view>
  </cover-card>

  <!-- 商品信息 -->
  <cover-card wx:if="{{skuInfoVisible}}" bind:close="switchSkuInfo">
    <view class="sku-info-cover">
      <view class="sku-info-cover-title">
        <text>INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤INS款牛仔裤</text>
      </view>
      <view class="sku-info-cover-list">
        <view class="sku-info-cover-row">
          <text space="emsp" class="label">成分含量</text>
          <view class="sku-info-cover-content">棉98.8%、聚氨酯弹性纤维、聚氨酯弹性纤维、聚氨酯弹性纤维(氨纶)1.2%</view>
        </view>
        <view class="sku-info-cover-row">
          <text space="emsp" class="label">成  量</text>
          <view class="sku-info-cover-content">棉98.8%、聚氨酯弹性纤维、聚氨酯弹性纤维、聚氨酯弹性纤维(氨纶)1.2%</view>
        </view>
      </view>
      <button class="sku-info-cover-confirm" catchtap="switchSkuInfo">确认</button>
    </view>
  </cover-card>
</view>
