.page-container{
  border-top: 1px solid #e5e5e5;
  padding-bottom: 120rpx;
}
.swiper{
  width: 100vw;
  height: 100vw;
}
.slide-image{
  width: 100vw;
  height: 100vw;
}

.sku-info{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 10rpx 30rpx 24rpx 30rpx;
}
.title{
  width: 100%;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.sku-detail{
  width: 100%;
  height: 56rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.sku-price{
  font-size: 40rpx;
  color: #A38064;
}
.sku-payednumber{
  font-size: 26rpx;
  color: #999;
}


.list-container{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  background: #fff;
  padding-left: 30rpx;
}
.list{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.list:last-child{
  border-bottom: 0;
}
.icon-arrow{
  width: 32rpx;
  height: 50rpx;
}
/* 富文本详情 */
.sku-desc{
  width: 100vw;
  background: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}
.sku-desc-title{
  display: block;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.sku-desc-title::before, .sku-desc-title::after{
  content: '——';
  color: #999;
  font-weight: 300;
  margin: 0 30rpx;
}
.rich-container{
  width: 100vw;
  overflow: hidden;
}
/* 相关推荐 */
.recommend-container{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}
.recommend-list{
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  height: 460rpx;
  /* box-sizing: border-box; */
  /* padding: 30rpx 0; */
  overflow-x: scroll;
  /* display: flex; */
  /* flex-direction: row; */
}
.recommend-wrap{
  width: auto;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  white-space: nowrap;
  /* display: flex;
  flex-direction: row; */
}
.recommend-sku{
  width: 280rpx;
  height: 100%;
  margin-right: 30rpx;
  overflow: hidden;
  display: inline-block;
  /* flex: none; */
  /* display: inline-block; */
}
.recommend-sku-img{
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 20rpx;
}
.recommend-sku-title{
  display: block;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: left;
}
.recommend-sku-price{
  display: block;
  font-size: 34rpx;
  color: #A38064;
  text-align: left;
}
/* 底部 */
.operation{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  box-shadow: 0 -2px 6px 0 rgba(0,0,0,0.11);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.service{
  height: 100%;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.service-text{
  line-height: 1;
}
.cart{
  height: 100%;
  padding: 0 40rpx 0 10rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}

.add-cart{
  flex: 1;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
  background: #C0A588;
  border-radius: 0;
  border: 0;
}
.add-cart-hover{
  background: #a38064;
}

.buy{
  flex: 1;
  background: #BF4251;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
}
.buy-hover{
  background: #a83644;
}

.animation{
  width: 100vw;
  height: 100vw;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  animation: add-cart 0.7s linear forwards;
}

@keyframes add-cart {
  0%{
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  50%{
    transform: translateY(50vh) scale(0.1);
    opacity: 0.4;
  }
  100%{
    transform: translateY(100vh) scale(0);
    opacity: 0;
  }
}
/* 商品尺寸 */
.sku-size{
  position: relative;
}
.sku-size-header{
  width: 100%;
  height: 240rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.sku-size-header-content{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
}
.sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.sku-size-info{
  flex: 1;
  height: 200rpx;
  position: relative;
  font-size: 30rpx;
  color: #333;
}
.sku-size-price{
  position: absolute;
  left: 0;
  bottom: 0;
  color: #A38064;
  font-size: 40rpx;
}
.sku-size-properties{
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}
.sku-size-properties-title{
  color: #333;
  font-size: 28rpx;
  text-align: left;
  margin-top: 30rpx;
}
.sku-size-properties-value{
  margin-top: 20rpx;
  margin-right: 30rpx;
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  text-align: center;
  background: #f0f0f0;
  color: #666;
  border-radius: 2rpx;
  display: inline-block;
}
.sku-size-properties-value-selected{
  background: #C0A588;
  color: #fff;
}
.sku-size-properties-value-disabled{
  background: #f0f0f0;
  color: #ccc;
}
.sku-size-number{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  margin: 30rpx 0 60rpx 0;
}
.edit-number-container{
  width: 206rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.edit-number-button{
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 34rpx;
  color: #666;
  background: #f0f0f0;
  border-radius: 4rpx;
}
.edit-number-button-disabled{
  color: #ccc;
}
.edit-number{
  font-size: 30rpx;
  color: #333;
}
.sku-size-btn-group{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.sku-size-btn{
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  font-size: 30rpx;
  background: #f0f0f0;
  color: #666;
}
.sku-size-btn-hover{
  background: #e5e5e5;
}

.sku-size-btn-confirm{
  background: #BF4251;
  color: #fff;
}
.sku-size-btn-confirm-hover{
  background: #a83644;
}
/* 商品信息 */
.sku-info-cover{
  position: relative;
}
.sku-info-cover-title{
  width: calc(100vw - 60rpx);
  box-sizing: content-box;
  padding: 30rpx 0;
  border-bottom: 1px solid #e5e5e5;
  margin: 0 auto;
}
.sku-info-cover-list{
  width: 100%;
  margin-top: 20rpx;
  padding: 0 30rpx;
  overflow: hidden;
}
.sku-info-cover-row{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.label{
  width: 140rpx;
  text-align: left;
  color: #999;
}
.sku-info-cover-content{
  flex: 1;
}
.sku-info-cover-confirm{
  width: 100vw;
  height: 100rpx;
  text-align: center;
  color: #fff;
  background: #BF4251;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
