.page-container{
  border-top: 1px solid #e5e5e5;
}
.swiper{
  width: 100vw;
  height: 100vw;
}
.slide-image{
  width: 100vw;
  height: 100vw;
}

.sku-info{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 10rpx 30rpx 24rpx 30rpx;
}
.title{
  width: 100%;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.sku-detail{
  width: 100%;
  height: 56rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.sku-price{
  font-size: 40rpx;
  color: #A38064;
}
.sku-payednumber{
  font-size: 26rpx;
  color: #999;
}


.list-container{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  background: #fff;
  padding-left: 30rpx;
  margin-bottom: 120rpx;
}
.list{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}
.list:last-child{
  border-bottom: 0;
}
.icon-arrow{
  width: 32rpx;
  height: 50rpx;
}

.operation{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  box-shadow: 0 -2px 6px 0 rgba(0,0,0,0.11);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.service{
  height: 100%;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.service-text{
  line-height: 1;
}
.cart{
  height: 100%;
  padding: 0 40rpx 0 10rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}

.add-cart{
  flex: 1;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
  background: #C0A588;
  border-radius: 0;
  border: 0;
}
.add-cart-hover{
  background: #a38064;
}

.buy{
  flex: 1;
  background: #BF4251;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
}
.buy-hover{
  background: #a83644;
}

.animation{
  width: 100vw;
  height: 100vw;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  animation: add-cart 0.7s linear forwards;
}

@keyframes add-cart {
  0%{
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  50%{
    transform: translateY(50vh) scale(0.1);
    opacity: 0.4;
  }
  100%{
    transform: translateY(100vh) scale(0);
    opacity: 0;
  }
}
