.page-container{
  height: 100vh;
}
/* 头像 */
.header{
  width: 100%;
  height: 30vw;
}
.header-bg{
  width: 100%;
  height: 100%;
}
.header-content{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  background: transparent;
}

.avatar{
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  margin: 36rpx auto 20rpx auto;
}
.name{
  font-size: 30rpx;
  display: block;
  text-align: center;
  color: #333;
}
/* 订单 */
.black{
  color: #333;
}
.gray{
  color: #999;
}

.order-info{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.order-all{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;

}
.icon-arrow{
  width: 32rpx;
  height: 50rpx;
}
.order-type{
  width: 100%;
  height: 20vw;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.type{
  width: 80rpx;
  position: relative;
}
.type-icon{
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}
.type-name{
  font-size: 26rpx;
  color: #333;
  margin-top: 14rpx;
}

/* 列表 */
.list-container{
  width: 100%;
  margin-top: 20rpx;
}
.list{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}
.list:last-child{
  border-bottom: 0;
}
.list-hover{
  background: #f0f0f0;
}