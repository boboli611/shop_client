/* pages/apply-payback/apply-payback.wxss */
.sku-container{
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
}
.sku-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.sku-content{
  flex: 1;
  height: 200rpx;
  position: relative;
}
.sku-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.sku-info-row{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.gray{
  color: #999;
}
.black{
  color: #333;
}
.sku-detail{
  font-size: 26rpx;
  margin-right: 20rpx;
}
.sku-price-and-number{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.sku-price{
  color: #A38064;
  font-size: 30rpx;
}
.sku-number{
  font-size: 30rpx;
  color: #333;
}
/* 表单 */
.form{
  display: block;
  margin-top: 20rpx;
}
/* 输入框 */
.input-container{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  color: #333;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
}
.input-container:nth-child(4){
  border-bottom: 0;
}

label{
  margin-right: 20rpx;
}

.input{
  flex: 1;
  height: 90rpx;
  text-align: right;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.save{
  width: 100vw;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #BF4251;
  color: #fff;
  border-radius: 4rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}
